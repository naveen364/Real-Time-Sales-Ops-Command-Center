<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>External Sync</label>
    <pluralLabel>External Syncs</pluralLabel>
    <deploymentStatus>Deployed</deploymentStatus>
    <eventType>HighVolume</eventType>
    <fields>
        <fullName>RecordId__c</fullName>
        <label>Record Id</label>
        <type>Text</type>
        <length>18</length>
        <description>The Salesforce record ID that was synced</description>
    </fields>
    <fields>
        <fullName>ObjectType__c</fullName>
        <label>Object Type</label>
        <type>Text</type>
        <length>100</length>
        <description>e.g. Contact, Opportunity, Account</description>
    </fields>
    <fields>
        <fullName>Operation__c</fullName>
        <label>Operation</label>
        <type>Text</type>
        <length>50</length>
        <description>CREATE, UPDATE, DELETE</description>
    </fields>
    <fields>
        <fullName>SyncTarget__c</fullName>
        <label>Sync Target</label>
        <type>Text</type>
        <length>100</length>
        <description>e.g. MongoDB, PostgreSQL, Slack</description>
    </fields>
    <fields>
        <fullName>Status__c</fullName>
        <label>Status</label>
        <type>Text</type>
        <length>50</length>
        <description>SUCCESS or FAILED</description>
    </fields>
    <fields>
        <fullName>Message__c</fullName>
        <label>Message</label>
        <type>Text</type>
        <length>255</length>
    </fields>
    <fields>
        <fullName>SyncedAt__c</fullName>
        <label>Synced At</label>
        <type>Text</type>
        <length>30</length>
        <description>ISO timestamp of when sync completed</description>
    </fields>
</CustomObject>
